@model Retail_Product_Management_System.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Register</h1>
<section class="row">
    <form class="col-lg order-lg-2 m-4" method="post" asp-action="Register">
        <div class="form-group">
            <div class="row">
                <div class="col-lg">
                    <label asp-for="FirstName">First Name</label>
                    <input class="form-control" asp-for="FirstName" id="FirstName" placeholder="Enter Your First Name" required>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-lg">
                    <label asp-for="LastName">Last Name</label>
                    <input class="form-control" asp-for="LastName" id="FirstName" placeholder="Enter Your Last Name">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input class="form-control" asp-for="Email" id="email" placeholder="Enter Your Email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" type="password" id="Password" placeholder="Enter Your Password" required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <textarea class="form-control" asp-for="Address" rows="3" placeholder="Enter Your Address" required></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary"/>
        </div>
    </form>
    <figure class="col-lg order-lg-1 text-center m-5">
        <img class="img-fluid" src="https://cdni.iconscout.com/illustration/premium/thumb/man-trying-to-login-in-his-account-3406108-2840402.png" alt="Register">
    </figure>
</section>


